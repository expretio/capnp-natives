<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.expretio.maven</groupId>
    <artifactId>capnp-natives</artifactId>
    <version>0.5.3-SNAPSHOT</version>

    <packaging>pom</packaging>

    <name>capnp-resource-provider</name>

    <inceptionYear>2015</inceptionYear>

    <organization>
        <name>Expretio Technologies, Inc</name>
    </organization>

    <issueManagement>
        <system>github</system>
        <url>https://github.com/expretio/capnp-natives/issues</url>
    </issueManagement>

    <licenses>
        <license>
            <name>MIT</name>
            <distribution>manual</distribution>
            <url>https://github.com/expretio/capnp-natives/blob/master/LICENSE</url>
        </license>
    </licenses>

    <pluginRepositories>
        <pluginRepository>
            <id>nuxeo-plugin-repo</id>
            <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <properties>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>

        <java.javadoc.version>2.10.3</java.javadoc.version>

        <surefire.version>2.18.1</surefire.version>

        <maven.version>3.2.5</maven.version>

        <capnp-natives.fileName>capnp-natives.xml</capnp-natives.fileName>
        <capnp-natives.baseFileName>capnp-natives-base.xml</capnp-natives.baseFileName>
        <capnp-natives.fragmentFileName>capnp-natives-fragment.xml</capnp-natives.fragmentFileName>
        <capnp-natives.basePath>org/expretio/maven/capnp/natives</capnp-natives.basePath>
        <capnp-natives.outputDirectory>${project.build.directory}/capnp</capnp-natives.outputDirectory>

        <assembly.file>src/main/assemble/assemble.xml</assembly.file>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4.2</version>
                <executions>
                    <execution>
                        <id>resources</id>
                        <goals>
                            <goal>resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${surefire.version}</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.gmaven</groupId>
                <artifactId>groovy-maven-plugin</artifactId>
                <version>2.0</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <source>

                                import static groovy.io.FileType.*;
                                import groovy.util.*;
                                import java.io.*;
                                import java.nio.*;
                                import org.dom4j.*;
                                import org.dom4j.io.*;
                                import be.hikage.xdt4j.*;

                                capnpFileName = properties["capnp-natives.fileName"];
                                capnpBaseFileName = properties["capnp-natives.baseFileName"];
                                capnpFragmentFileName = properties["capnp-natives.fragmentFileName"];
                                capnpOutputDirectory = new File( properties["capnp-natives.outputDirectory"] );
                                capnpBasePathName = properties["capnp-natives.basePath"];
                                capnpBaseFile =
                                    new File(
                                        project.build.outputDirectory,
                                        capnpBaseFileName );
                                capnpGlobalMetaInfDir =
                                    new File(
                                        project.build.outputDirectory,
                                        "META-INF" );
                                capnpFile =
                                    new File(
                                        capnpGlobalMetaInfDir,
                                        capnpFileName );
                                basePath =
                                    new File(
                                        project.build.outputDirectory,
                                        capnpBasePathName );

                                capnpGlobalMetaInfDir.mkdirs();
                                capnpOutputDirectory.mkdirs();

                                capnpFile &lt;&lt; capnpBaseFile.text;

                                baseDescriptorDoc = new SAXReader().read( capnpBaseFile );

                                basePath.traverse(
                                    [
                                        type: FILES,
                                        nameFilter: capnpFragmentFileName
                                    ],
                                    {
                                        target =
                                            new File(
                                                new File( capnpOutputDirectory, capnpBasePathName ),
                                                it.parentFile.parentFile.name + "/" + it.parentFile.name + "/META-INF"
                                            );

                                        target.mkdirs();

                                        mergeXml(
                                            baseDescriptorDoc,
                                            it,
                                            new File( target, capnpFileName )
                                        );

                                        mergeXml( new SAXReader().read( capnpFile ), it, capnpFile );
                                    }
                                );

                                def mergeXml( Document baseDoc, File inFile, File outFile )
                                {
                                    transformDoc = new SAXReader().read( inFile );

                                    xmlWriter =
                                        new XMLWriter(
                                            new BufferedWriter( new FileWriter( outFile ) ),
                                            OutputFormat.createPrettyPrint()
                                        );

                                    xmlWriter.write(
                                        new XdtTransformer().transform( baseDoc, transformDoc ),
                                    )

                                    xmlWriter.close();
                                }

                            </source>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>be.hikage</groupId>
                        <artifactId>xdt4j</artifactId>
                        <version>1.0.2</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.nuxeo.build</groupId>
                <artifactId>ant-assembly-maven-plugin</artifactId>
                <version>2.0.4</version>
                <executions>
                    <execution>
                        <id>packaging</id>
                        <phase>package</phase>
                        <goals>
                            <goal>build</goal>
                        </goals>
                        <configuration>
                            <buildFile>${assembly.file}</buildFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
